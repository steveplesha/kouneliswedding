<div class="container-fluid">
    <%= render 'layouts/messages' %>
    <div class="row-fluid">
	   
		<div class="login center-text col col-md-5 col-md-offset-3">
			<div>
                <h1 class="invite-text">Enter your username and password</h1>
				<%= form_tag sessions_path do %>

					<p>
						<%= label_tag :username, "Username", class:"invite-text" %><br />
						<%= text_field_tag :username, params[:username], class:"text-input" %>
					</p>
					<p>
						<%= label_tag :password, "Password", class:"invite-text" %><br />
						<%= password_field_tag :password, nil, class:"text-input" %>
					</p>
					<p class="button"><%= submit_tag "Login", class: 'submit login-btn' %></p>
				<% end %>
                <p class="invite-text">If you are having issues logging in or need assistance,<br>please contact the Kounelis home at (219) 865-0206</p>
                
            </div>
		</div>
	</div>
</div>
