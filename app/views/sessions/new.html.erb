<div class="container-fluid">
    <%= render 'layouts/messages' %>
    <div class="row-fluid">
	   
		<div class="login center-text col col-md-5 col-md-offset-3">
			<div>
				<h1 class="invite-text">Enter your username and password</h1>
				<%= form_tag sessions_path do %>

					<p>
						<%= label_tag :username, "Username", class:"invite-text" %><br />
						<%= text_field_tag :username, params[:username] %>
					</p>
					<p>
						<%= label_tag :password, "Password", class:"invite-text" %><br />
						<%= password_field_tag :password %>
					</p>
					<p class="button"><%= submit_tag "Login", class: 'submit' %></p>
				<% end %>
			</div>
		</div>
	</div>
</div>