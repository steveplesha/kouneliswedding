						<%= f.radio_button :reception5, 1 %>
						<%= label :reception_1, "Absolutely", class: 'radiolabel' %>
						<%= f.radio_button :reception5, 0 %>
						<%= label :reception_0, "Can't make it", class: 'radiolabel' %>
					</div>  
				<% end %>
                <div>
					<%= f.label "I promise to dance if you play this song:" %><br />
					<%= f.text_field :comment, placeholder: "Enter song here...", class: 'initial-text' %>
				</div>
				<%= f.hidden_field :respond, value: true %>
				<div class="form-actions">
					<%= f.submit 'Click to RSVP', class:'rsvp-btn submit initial-text' %>
				</div>
			<% end %>			
		</div>
	</div>	   
</div>