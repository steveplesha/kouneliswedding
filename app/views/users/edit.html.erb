<div id="guest-admin">
	<h1>Edit guest information</h1>

	<%= form_for @user do |f| %>
		<% if @user.errors.any? %>
			<div id="error_explanation">
			  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
				<ul>
					<% @user.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
        <div class="group">
            <div class="field">
                <%= f.label "FirstName1" %>
                <%= f.text_field :firstname1, class: "right" %>
            </div>         
            <div class="field">
                <%= f.label "Username" %>
                <%= f.text_field :username, class: "right" %>
            </div>
            <div class="field">
                <%= f.label "Password" %>
                <%= f.text_field :password, class: "right" %>
            </div>   
            <div class="field">
                <%= f.label "Numguests" %>
                <%= f.number_field :numguests, class: "right" %>
            </div>
            <div class="field">
                <div>
                    <%= f.label "RSVP'd" %>
                    <%= f.radio_button :respond, true %>
                    <%= f.label :respond_1, "Yes", class: 'radiolabel' %>
                    <%= f.radio_button :respond, false %>
                    <%= f.label :respond_0, "No", class: 'radiolabel' %>
                </div>                          
				<div>
					<%= f.label 'reception', "Is #{@user.firstname1} coming to the reception?" %><br />
					<%= f.radio_button :reception, true %>
					<%= label :reception_1, "Yes", class: 'radiolabel' %>
					<%= f.radio_button :reception, false %>
					<%= label :reception_0, "No", class: 'radiolabel' %>
				</div>  	
            </div>
            <div class="field">
                <%= f.label "Role" %>
                <%= f.text_field :role, class: "right" %>
            </div>
            <br />	
        </div>
        <div class="guest-update-btn">
            <div class="actions">
                <%= f.submit "Update Guest", class: 'submit' %>
            </div>
        <% end %>
        <br />
    
        <%= link_to 'Delete Guest', user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
        <%= link_to '<< Back', users_path, class: 'back-link' %>
        </div>

</div>
