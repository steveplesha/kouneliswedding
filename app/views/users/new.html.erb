<div class="container">
    <h1>Add User</h1>

    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p>
        <%= f.label :username %><br>
        <%= f.text_field :username %>
      </p>
      <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </p>
      <p >
        <%= f.label :firstname1 %><br>
        <%= f.text_field :firstname1 %><br>
      </p>
      <p>
        <%= f.label :role %><br>
        <%= f.text_field :role %><br>
      </p>
      <p><%= f.submit class: "btn btn-success" %></p>
    <% end %>
    <%= link_to '<< Cancel', users_path, class: 'back-link' %>
    
</div>